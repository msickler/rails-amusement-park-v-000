<h1>All Attractions</h1>
<ul>
  <% @attractions.each do |attraction| %>
  <li><%= "#{attraction.name}" %> 
     <%= link_to "Go on #{attraction.name}", attraction_path(attraction) unless @user.admin %>
     <%= link_to "Show #{attraction.name}", attraction_path(attraction) if @user.admin %>
   </li>
  <% end %>
</ul>
<p><% if @user.admin %>
  <%= link_to "Make New Attraction", new_attraction_path %>
<% end %></p>
